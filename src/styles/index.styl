@import '../../node_modules/cozy-ui/transpiled/react/stylesheet.css'
html {
    --documentMaxWidth: 48rem;
    --documentDividerColor: #D6D8DA;
    --note-base-size: 1.125rem;
    --note-block-spacing: calc(var(--note-base-size) * 2);
    --note-maintitle-padding: 2rem;
    --documentTopPadding: calc(2 * var(--note-base-size));
    --documentPadding: calc(2 * var(--note-base-size));
}
@media (max-width: 800px) {
    html {
        --documentPadding: var(--note-base-size);
    }
}
@media (max-width: 420px) {
    html {
        --note-base-size: 1rem;
        --note-block-spacing: var(--note-base-size);
        --note-maintitle-padding: 0;
    }
}

/* For layout change in cozy-ui */
@media (max-width:63.938rem) {
    .note-header-menu--editing {
        position: sticky;
        top: 0;
        z-index: 2;
        background-color: var(--white);
    }
    html .akEditor > div:first-child {
        position: sticky;
        top: 0;
        z-index: 3;
        background-color: var(--white);
    }

}

// @stylint off

/* div o-layout : do not add the space for the cozy-bar */
html [role=application] > div::before,
html [role=application] > div::after, {
    height: auto !important;
    display: none !important;
}

/* prose mirror toolbar in the upper bar */
html .akEditor > div:first-child {
    margin-left: 3rem;
    margin-right: 3rem;
    margin-top: -48px;
    margin-bottom: 0;
    height: 48px;
}
html .akEditor > div:first-child > div:first-child {
    width: auto !important;
    margin: auto;
}
html .akEditor > div:first-child > div:first-child + div {
    display: none;
}
/* icon for text color was not aligned */
.sc-gxMtzJ {
    position: relative;
    top: 0.2rem;
}

/* auto size for the toolbar */
html .akEditor > div:first-child > div:first-child > div:first-child {
    width: calc(100vw - 6rem) !important;
}
@media (min-width: 398px) {
    html .akEditor > div:first-child > div:first-child > div:first-child {
        margin-right: calc(398px - 100vw);
    }
}
@media (min-width: 467px) {
    html .akEditor > div:first-child > div:first-child > div:first-child {
        margin-right: calc(450px - 100vw);
    }
}
@media (min-width: 547px) {
    html .akEditor > div:first-child > div:first-child > div:first-child {
        margin-right: calc(482px - 100vw);
    }
}
@media (min-width: 677px) {
    html .akEditor > div:first-child > div:first-child > div:first-child {
        margin-right: calc(561px - 100vw);
    }
}
@media (min-width: 747px) {
    html .akEditor > div:first-child > div:first-child > div:first-child {
        margin-right: calc(677px - 100vw);
    }
}




.sto-app-back {
  display: inline-flex;
  align-items: center;
  text-decoration: none;
  color: var(--slateGrey) !important;
}

.page-header-menu {
  display: flex;
  justify-content: space-between;
  padding: 0 1rem
  margin: 0;
  align-items: center;
  box-shadow: 0 4px 16px 0 rgba(0, 0, 0, 0.08), 0 2px 4px 0 rgba(50, 54, 63, 0.08);
  z-index: 3;
}
.page-header-menu--left {
  display: flex;
  flex-grow: 1;
  align-items: center;
}
.page-header-menu--right {
  display: flex;
  align-items: center;
}

html .note-article {
    display: flex;
    flex-direction: column;
    height: 100%;
}

html .note-title {
    flex-grow: 1;
    align-items: center;
    margin: 0 2rem calc(2 * var(--note-block-spacing)) 2rem;
    text-align: center;
    font-size: calc( 2 * var(--note-base-size));
    color: var(--charcoal-grey);
    line-height: 1.22;
    font-weight: 900;
    font-family: var(--primaryFont);
}
html .note-title-input,
html .note-title-input:focus,
html .note-title-input:hover,
html .note-title-input::placeholder {
    border: none;
    width: 100%;
    padding: 0;
    margin: 0
    overflow: visible;
    text-align: center;
    font-size: calc( 2 * var(--note-base-size));
    color: var(--charcoal-grey);
    line-height: 1.222;
    font-weight: 900;
    font-family: Lato-Black, var(--primaryFont);
    vertical-align: bottom;
    resize: none;
    min-height: min-content;
}
html .note-title-input::placeholder {
    color: var(--coolGrey);
}

html .note-editor-container {
    position: relative;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
}
html .notes-list-container .page-header-menu {
    margin-left: 2rem;
    margin-right: 2rem;
}

html .ProseMirror {
  font-size: 1rem !important
}

html .ProseMirror p,
html .ProseMirror h1,
html .ProseMirror h2,
html .ProseMirror h3,
html .ProseMirror h4,
html .ProseMirror h5,
html .ProseMirror h6 {
  line-height: 1.15 !important
}

html .akEditor {
    background-color: var(--documentMarginColor);
}



html .fabric-editor-popup-scroll-parent > div > div {
  margin: 0 auto;
  padding: 0;
  max-width: calc(var(--documentMaxWidth) + 2 * var(--documentPadding));
}

html .ak-editor-content-area {
    padding: var(--documentTopPadding) var(--documentPadding) var(--documentPadding) var(--documentPadding) !important;
    background-color: var(--white);
}

#editor-scroll-gutter {
    display: none;
}

html .fabric-editor-popup-scroll-parent > div > div {
    height: 100%;
}

html body .ProseMirror p,
html body .ProseMirror h1,
html body .ProseMirror h2,
html body .ProseMirror h3,
html body .ProseMirror h4,
html body .ProseMirror h5,
html body .ProseMirror h6 {
    line-height: 1.5 !important;
    margin: 1rem 0;
}

html .note-editor-container .akEditor h1 {
    font-size: 2,25rem;
}
html .note-editor-container .ProseMirror h1 {
    margin: var(--note-maintitle-padding) 0;
}
html .note-editor-container .akEditor h2 {
    font-size: 1.5rem;
    border-top: 2px solid var(--documentDividerColor);
    padding-top: 0.5rem;
}
html .note-editor-container .ProseMirror h2 {
    margin: 2rem 0;
}
html .note-editor-container .akEditor .ProseMirror > h2:first-child {
    border-top: none;
}
html .note-editor-container .akEditor h3 {
    font-size: 1.375rem;
    margin: 1.5rem 0;
}
html .note-editor-container .akEditor h4 {
    font-size: 1.125rem;
    margin: 1.5rem 0;
}
html .note-editor-container .akEditor h5 {
    font-size: 1rem;
    color: var(--slateGrey);
    margin: 1rem 0;
}
html .note-editor-container .akEditor h6 {
    font-size: 1rem;
    color: var(--slateGrey);
    font-weight: normal;
    margin: 1rem 0;
}

.notes-list {
    width: calc(100% - 20px);
}
.notes-list td, .notes-list th {
    text-align: left;
    color: var(--coolGrey);
}
.notes-list tr > th:first-child {
    padding-left: 2rem;
}
.notes-list tr > td:last-child,
.notes-list tr > th:last-child {
    padding-right: 2rem;
    text-align: right;
}

.note-item {
    display: flex;
    align-items: center;
}
.note-icon {
    margin-right: 1rem;
}
.note-link {
    text-decoration: none;
    text-transform: none;
    font-weight: normal;
}

// @stylint on
